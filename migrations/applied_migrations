#!/bin/bash

echo "Applying migration AddEstablisher"

echo "Adding routes to register.routes"

echo "" >> ../conf/register.routes
echo "GET        /addEstablisher                       controllers.register.AddEstablisherController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/register.routes
echo "POST       /addEstablisher                       controllers.register.AddEstablisherController.onSubmit(mode: Mode = NormalMode)" >> ../conf/register.routes

echo "GET        /changeAddEstablisher                       controllers.register.AddEstablisherController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/register.routes
echo "POST       /changeAddEstablisher                       controllers.register.AddEstablisherController.onSubmit(mode: Mode = CheckMode)" >> ../conf/register.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo "addEstablisher.title = addEstablisher" >> ../conf/messages.en
echo "addEstablisher.heading = addEstablisher" >> ../conf/messages.en
echo "addEstablisher.checkYourAnswersLabel = addEstablisher" >> ../conf/messages.en
echo "addEstablisher.error.required = Please give an answer for addEstablisher" >> ../conf/messages.en

echo "Adding helper line into UserAnswers"
awk '/class/ {\
     print;\
     print "  def addEstablisher: Option[Boolean] = cacheMap.getEntry[Boolean](AddEstablisherId.toString)";\
     print "";\
     next }1' ../app/utils/UserAnswers.scala > tmp && mv tmp ../app/utils/UserAnswers.scala

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def addEstablisher: Option[AnswerRow] = userAnswers.addEstablisher map {";\
     print "    x => AnswerRow(\"addEstablisher.checkYourAnswersLabel\", if(x) \"site.yes\" else \"site.no\", true, routes.AddEstablisherController.onPageLoad(CheckMode).url)"; print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration AddEstablisher completed"

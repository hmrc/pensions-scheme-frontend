#!/bin/bash

echo "Applying migration PreviousAddressPostcodeLookup"

echo "Adding routes to trustees.routes"

echo "" >> ../conf/trustees.routes
echo "GET        /previousAddressPostcodeLookup                       controllers.trustees.PreviousAddressPostcodeLookupController.onPageLoad(mode: Mode = NormalMode)" >> ../conf/trustees.routes
echo "POST       /previousAddressPostcodeLookup                       controllers.trustees.PreviousAddressPostcodeLookupController.onSubmit(mode: Mode = NormalMode)" >> ../conf/trustees.routes

echo "GET        /changePreviousAddressPostcodeLookup                       controllers.trustees.PreviousAddressPostcodeLookupController.onPageLoad(mode: Mode = CheckMode)" >> ../conf/trustees.routes
echo "POST       /changePreviousAddressPostcodeLookup                       controllers.trustees.PreviousAddressPostcodeLookupController.onSubmit(mode: Mode = CheckMode)" >> ../conf/trustees.routes

echo "Adding messages to conf.messages"
echo "" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__title = previousAddressPostcodeLookup" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__heading = previousAddressPostcodeLookup" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__field1 = Field 1" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__field2 = Field 2" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__checkYourAnswersLabel = previousAddressPostcodeLookup" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__error__field1_required = Please give an answer for field1" >> ../conf/messages.en
echo messages__"previousAddressPostcodeLookup__error__field2_required = Please give an answer for field2" >> ../conf/messages.en

echo "Adding helper method to CheckYourAnswersHelper"
awk '/class/ {\
     print;\
     print "";\
     print "  def previousAddressPostcodeLookup: Option[AnswerRow] = userAnswers.get(identifiers.trustees.PreviousAddressPostcodeLookupId) map {";\
     print "    x => AnswerRow(\"previousAddressPostcodeLookup.checkYourAnswersLabel\", Seq(s\"${x.field1} ${x.field2}\"), false, controllers.trustees.routes.PreviousAddressPostcodeLookupController.onPageLoad(CheckMode).url)";\
     print "  }";\
     next }1' ../app/utils/CheckYourAnswersHelper.scala > tmp && mv tmp ../app/utils/CheckYourAnswersHelper.scala

echo "Moving test files from generated-test/ to test/"
rsync -avm --include='*.scala' -f 'hide,! */' ../generated-test/ ../test/
rm -rf ../generated-test/

echo "Migration PreviousAddressPostcodeLookup completed"
